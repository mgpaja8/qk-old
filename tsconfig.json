{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "inlineSourceMap": true,
    "jsx": "react-native",
    "outDir": "build",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "compileOnSave": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}
